<% @tweets.each do | tw | %>
    <div class="box">
        <article class="media">
            <div class="media-content">
                <div class="content">
                    <strong><%= tw.user_name %></strong><br />
                    <small><%= tw.user_screen_name %></small><br/>
                    <p><%= tw.tweet_desc %></p>
                </div>
            </div>
        </article>
    </div>
<% end %>