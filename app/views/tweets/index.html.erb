<section class="section">
  <div class="container">
    <div class="columns">

      <h1> Mine Tweets</h1>

      <table>
        <tr>
          <th>User</th>
          <th>Descricao</th>
          <th>Criado_em</th>
        </tr>
      <% @tweets.each do |t| %>
        <tr>
          <td><%= t.user_name   %></td>
          <td><%= t.tweet_desc  %></td>
          <td><%= t.created_at  %></td>
        </tr>
      <% end %>
      </table>

    </div>
  </div>
</section>